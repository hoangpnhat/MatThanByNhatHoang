<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <declare-styleable name="SquareCameraFrame">
        <attr name="scf_cornerLineThickness" format="dimension"/>
        <attr name="scf_cornerRadius" format="dimension"/>
        <attr name="scf_cornerLinePadding" format="dimension"/>
        <attr name="scf_outsideBackgroundColor" format="color"/>
    </declare-styleable>
</resources>
